{
  "display": "Node 14",
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/config/*", "**/*.spec.ts"]
}
